@model ListViewModel
@{ 
    ViewData["Title"] = "Favorites";
}
<div class="text-center">
    <h2>My Favorites</h2>
    <form asp-action="Delete" methods="post">
        <a asp-action="Index" asp-controllers="Home" class="btn btn-primary"
           asp-route-activeOnes="@Model.Active1"
           asp-route-activeTwos="@Model.Active2">
            Back to Home Page</a>
        <button type="submit" class="btn btn-primary">
            Clear Favorites
        </button>
    </form>
    <br />
</div>
<div class="row">'<div class="col-8 offset-2">
    <ul class="list-group">
        @foreach (Recipe recipe in Model.Recipes)
        {
        <li class="list-group-item">
            <div class="row">
                <div class="col-sm-4">
                    <img src="~/images/@recipe.File" alt="" />
                </div>
                <div class="col-sm-4">
                    @recipe.Title
                </div>
            </div>
        </li>
        }
        </ul>
    </div>
                       
    </div>