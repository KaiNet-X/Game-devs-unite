@model List<Recipe>
@{
    ViewData["Title"] = "Home Page";
}
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Satyaprakash Carousel</title>
<link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">

<div class="text-center">
    <h1 class="display-4">Welcome to Quick Meals!</h1>
</div>

<h2 style="font-family:Arial Black; background-color: forestgreen;color: lightgray; text-align: center; font-style: normal">Suggested Recipes</h2>
<fieldset>
    <legend style="font-family:Arial Black;color:darkslategray">Here are this months suggested recipes!</legend>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">

                <div>
                    <div id="carousel" class="carousel slide">
                        <ol class="carousel-indicators">
                            @{int i = 0;}
                            @foreach (var Recipe in Model)
                            {
                                @if (i == 0)
                                {
                                    <li data-target="#carousel" data-slide-to="@i" class="active"></li>
                                }
                                else
                                {
                                    <li data-target="#carousel" data-slide-to="@i"></li>
                                }
                                i++;
                            }
                        </ol>
                        <div class="carousel-inner">
                            @{i = 0;}
                            @foreach (var Recipe in Model)
                            {
                                @if (i == 0)
                                {
                                    <div class="item active">
                                        <img src="/RecipeImages/@Recipe.GetFileName()" width="500" height="500" />
                                        <div class="container">
                                            <div class="carousel-caption">
                                                <h1>@Recipe.Title</h1>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="item">
                                        <img src="/RecipeImages/@Recipe.GetFileName()" width="500" height="500" />
                                        <div class="container">
                                            <div class="carousel-caption">
                                                <h1>@Recipe.Title</h1>
                                            </div>
                                        </div>
                                    </div>
                                }
                                i++; 
                            }
                        </div>
                    </div>
                </div>

                <script>
                    $("#carousel").carousel(
                        {
                            interval: 2000
                        });
                </script>



